<!-- Modal thêm địa chỉ-->
<div class="modal fade " id="add-address-profile" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Thêm địa chỉ</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <div class="row">
          <div class="col-sm-3">
            <h6 class="mb-0" style="font-size: 16px; margin-top: 18px;">Thêm địa chỉ mới</h6>
          </div>
          <div class="col-sm-9 text-secondary">
              <input type="text" class="form-control" 
                  style="min-height: 10px; font-size: 15px; margin-top: 10px;" id='input-new-address' autocomplete="new"/>
          </div>
        </div>
      </div>
      
      <div class="modal-footer">
        <p id='error-address' style="color: #CF2127;margin-right: 20px"></p>
        <button id='btn-add-address-modal'type="button" class="btn btn-primary"
            style='padding: 4px 20px; margin: 4px; text-transform: none;'>
            Thêm
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Modal xóa địa chỉ-->
<div class="modal fade" id="delete-address-person" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xóa địa chỉ</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        Bạn có muốn xóa địa chỉ này không?
      </div>
      
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal"
           style='padding: 6px 12px; margin: 4px; text-transform: none;'>
           Không
        </button>
        <button id='btn-delete-address'type="button" class="btn btn-danger" data-dismiss="modal"
            style='padding: 6px 12px; margin: 4px; text-transform: none;'>
            Xóa bỏ
        </button>
      </div>
    </div>
  </div>
</div>


<!-- Modal update địa chỉ-->
<div class="modal fade " id="modal-update-address" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Địa chỉ</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <div class="row">
          <div class="col-sm-3">
            <h6 class="mb-0" style="font-size: 16px; margin-top: 18px;">Địa chỉ </h6>
          </div>
          <div class="col-sm-9 text-secondary">
              <input type="text" class="form-control input-new-address-update" 
                  style="min-height: 10px; font-size: 15px; margin-top: 10px;" id='input-new-address-update' autocomplete="new"/>
          </div>
        </div>
      </div>
      
      <div class="modal-footer">
        <p id='error-address-update' style="color: #CF2127;margin-right: 20px"></p>
        <button type="button" class="btn btn-primary" data-dismiss="modal"
            style='padding: 4px 10px; margin: 4px; text-transform: none;'>
            Quay lại
        </button>
        <button id='btn-update-address-modal'type="button" class="btn btn-danger"
            style='padding: 4px 20px; margin: 4px; text-transform: none;'>
            Sửa
        </button>
      </div>
    </div>
  </div>
</div>



